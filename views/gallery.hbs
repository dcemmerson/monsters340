<div class="container">
    <div class="row">
        <center><h1>The Monster Ball</h1>
        <i>It's ALIVE!!</i></center>
    </div>
    <div class="row" id="galleryControls">
        <div class="col-md-3">
            <div class="input-group" >
                <label class="input-group-text" for="searchMonsterName">Name</label>
                <input id="searchMonsterName" type="text" class="form-control" autocomplete="grawr">
            </div>
            <div id="searchMonsterNameList"></div>
        </div>
        <div class="form-check col-md-2" >
            <input class="form-check-input" type="checkbox" id="myMonstersOnly" >
            <label class="form-check-label" for="myParts"> My Monsters Only</label>
        </div>
    </div>
    <div class="row" id="pageRow"></div>
    <div class="row">
        <div id="galleryDisplay"></div>
    </div>
</div>
<!-- View Full Modal -->
<div class="modal fade" id="viewFull" tabindex="-1" role="dialog" aria-labelledby="viewFullTitle" aria-hidden="true">
  <div class="modal-dialog" role="document" id="viewFullModal">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="viewFullTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="viewFullImage">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="dismissCanvas">Close</button>
        <button type="button" class="btn btn-primary" id="saveCanvas"></button>
      </div>
    </div>
  </div>
</div>